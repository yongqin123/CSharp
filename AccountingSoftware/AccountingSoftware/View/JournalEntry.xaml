<Page x:Class="AccountingSoftware.View.JournalEntry"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AccountingSoftware.View"
      xmlns:userControls="clr-namespace:AccountingSoftware.View.UserControl"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="800"
      Title="JournalEntry">

    <Grid Name="grid" RenderTransformOrigin="0.509,0.377">
        <Grid.RowDefinitions>
            <RowDefinition Height="150"/>
            <RowDefinition/>
            

        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Debit" HorizontalAlignment="Left" />
        <TextBlock Grid.Row="0" Text="Credit" HorizontalAlignment="Right" />
        <Button Grid.Row="0" Name="addDebit" Width="100" Height="50" HorizontalAlignment="Left" Content="ADD ENTRY" Click="addDebit_Click" />
        <Button Grid.Row="0" Name="addCredit" Width="100" Height="50" Content="ADD ENTRY" HorizontalAlignment="Right" Click="addCredit_Click"/>

        <StackPanel Grid.Row="1" Name="debitStack" Width="200" HorizontalAlignment="Left">
           
        </StackPanel>
        <StackPanel Grid.Row="1" Name="creditStack" Width="200" HorizontalAlignment="Right">
            
        </StackPanel>
        <Button Grid.Row="1" Name="submit" Click="submit_Click" VerticalAlignment="Bottom" HorizontalAlignment="Center" Content="Submit"/>

    </Grid>
</Page>

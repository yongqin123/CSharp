<Page x:Class="AccountingSoftware.View.AddAccount"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AccountingSoftware.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddAccount">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            
           
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Add Account" FontSize="50" HorizontalAlignment="Center" />
        <StackPanel Margin="0,100,0,0">
            <Label Content="Account Name" FontSize="30" HorizontalAlignment="Center"/>
            <TextBox Name="name" Width="200"/>
            <Label Content="Account Type" FontSize="30" HorizontalAlignment="Center"/>
            <ComboBox Name="type" Width="200" />
            <Button Name="submit" Content="Submit"  Width="100" Margin="0,50,0,0" Click="submit_Click" />
        </StackPanel>
    </Grid>
</Page>

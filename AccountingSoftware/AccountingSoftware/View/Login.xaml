<Page x:Class="AccountingSoftware.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AccountingSoftware"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="800"
      Title="Login">

    <Grid Name="login">
        
        <StackPanel Name="stack" Width="400px" Margin="200,20,200,29" >
            <Image Source="/Images/logo.png" Height="100" Width="100" Margin="0,40,0,0"/>
            <TextBlock Name="admin" Text="ADMIN PANEL" HorizontalAlignment="Center" FontSize="30"  FontWeight="Bold" Margin="0,50,0,0" />
            <TextBlock Name="usernameLabel" Text="USERNAME" HorizontalAlignment="Left" FontSize="10" Margin="40,100,0,0"  FontWeight="Bold" />
            <TextBox Name="username" Width="300" BorderThickness="0,0,0,1" Background="Transparent" BorderBrush="Aqua" FontSize="30" Foreground="white"/>
            <TextBlock Name="pwLabel" Text="PASSWORD" HorizontalAlignment="Left" FontSize="10" Margin="40,100,0,0"  FontWeight="Bold" />
            <PasswordBox Name="pasword" Width="300" BorderThickness="0,0,0,1" Background="Transparent" BorderBrush="Aqua" FontSize="30" Foreground="white"/>

            <Button Width="80" Height="30" BorderBrush="Aqua" Content="Submit" Foreground="Aqua" Background="Transparent" Margin="0,50,0,0" Click="Button_Click_1" />
        </StackPanel>
        

    </Grid>
    
</Page>
